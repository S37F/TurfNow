{
  "rules": {
    "bookings": {
      ".read": "auth != null && (auth.token.admin === true || query.orderByChild === 'userId' && query.equalTo === auth.uid)",
      ".write": "auth != null",
      "$bookingId": {
        ".read": "auth != null && (data.child('userId').val() === auth.uid || auth.token.admin === true || auth.token.owner === true)",
        ".write": "auth != null && (data.child('userId').val() === auth.uid || auth.token.admin === true)",
        ".validate": "newData.hasChildren(['userId', 'email', 'turfName', 'sport', 'time', 'bookingDate', 'status'])"
      }
    },
    "owners": {
      ".read": "auth != null && auth.token.admin === true",
      "$uid": {
        ".read": "auth != null && ($uid === auth.uid || auth.token.admin === true)",
        ".write": "auth != null && ($uid === auth.uid || auth.token.admin === true)"
      }
    },
    "$other": {
      ".read": false,
      ".write": false
    }
  }
}
